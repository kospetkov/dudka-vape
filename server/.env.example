# ====================================
# DudkaVape Server Configuration
# ====================================

# MongoDB
MONGODB_URI=mongodb://localhost:27017/vape-shop
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/vape-shop

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Server
PORT=5000
NODE_ENV=development

# Client URL (for redirects)
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:5000

# ====================================
# CLOUDINARY (Optional - for cloud image storage)
# Get keys at: https://cloudinary.com/
# ====================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ====================================
# LIQPAY Payment Gateway
# Get keys at: https://www.liqpay.ua/
# Dashboard: https://www.liqpay.ua/admin/business
# Documentation: https://www.liqpay.ua/documentation/en/
# ====================================
LIQPAY_PUBLIC_KEY=your_public_key
LIQPAY_PRIVATE_KEY=your_private_key

# ====================================
# NOVA POSHTA Delivery
# Get API key at: https://new.novaposhta.ua/ -> Налаштування -> API
# Documentation: https://developers.novaposhta.ua/
# ====================================
NOVAPOSHTA_API_KEY=your_api_key
